	"files": ["dist", "src"],
	"keywords": ["build-config", "tsup", "monorepo"],
	"author": "",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"dotenv-mono": "^1.5.1",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"tsup": "^8.5.0"
	}
}
