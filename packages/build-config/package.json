{
	"name": "@tm/build-config",
	"description": "Shared build configuration for Task Master monorepo",
	"type": "module",
	"private": true,
	"main": "./dist/tsdown.base.js",
	"types": "./src/tsdown.base.ts",
	"exports": {
		".": {
